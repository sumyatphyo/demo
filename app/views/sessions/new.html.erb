<div class="row">
    <%= render "/shared/nav" %>
</div>
<div  class="row">
  <div class="card mx-auto mt-5" style="width: 23rem; background: #8ab3f9;">
    <h4 class="card-title mx-auto mt-3">LogIn</h4>
    <div class="card-body">
      <div class="row">
        <div class="col-md-12 col-md-offset-3">
          <%= form_for(:session, url: login_path) do |f| %>
            <%= render "/shared/error_messages" %>
            <div class="row mt-3">
              <div class="col-md-3">
                <%= f.label :email %>
              </div>
              <div class="col-md-9">
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-md-3">
                <%= f.label :password %>
              </div>
              <div class="col-md-9">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <%= f.submit "Log in", class: "btn btn-primary ms-5 mt-3"%>
          <% end %>
          <div class="row mt-2">
            <p>New user? <%= link_to "Sign up now!" , signup_path%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>